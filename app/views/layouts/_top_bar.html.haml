.top-bar
  .top-bar-left
    %ul.dropdown.menu{"data-dropdown-menu" => ""}
      %li
        %h4= link_to 'Home', root_path
  .top-bar-right
    %ul.menu
      %li= link_to 'About the Veggies', category_path(Category.name_is('Veggies'), about: 'veggies')
      %li
        = link_to "Coloring pages", category_path(Category.name_is('Comics'), about: 'comics')
      %li= link_to 'About', about_path, class: is_active?('sites', 'about')
      - if user_signed_in?
        %li= link_to 'Products', products_path
        %li= link_to 'Categories', categories_path
        %li= link_to 'Sign out', destroy_user_session_path, method: :delete
