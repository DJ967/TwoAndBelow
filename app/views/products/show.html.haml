%h1= @product.name
.grid
  .span-1
    .box
      %b Description:
      = @product.description
.grid
  .span-2
    .box
      %b Price:
      = number_to_currency(@product.price)
  .span-1
    .box
      %b Category:
      = @product.category.name
  .span-4
    .box
      %b Quantity:
      = @product.quantity
%p
  %b Currently for sale:
  = @product.for_sale
%p
  %b Available on:
  = @product.available_on
%p
  %b Discontinued on:
  = @product.discontinued_on
%p
  = image_tag @product.image_url(:medium) if @product.image_data?

= link_to 'Edit', edit_product_path(@product)
\|
= link_to 'Back', products_path
