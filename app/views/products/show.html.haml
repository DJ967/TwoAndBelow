%p#notice= notice

%p
  %b Name:
  = @product.name
%p
  %b Description:
  = @product.description
%p
  %b Price:
  = number_to_currency(@product.price)
%p
  %b Category:
  = @product.category
%p
  %b Quantity:
  = @product.quantity
%p
  %b Currently for sale:
  = @product.for_sale
%p
  %b Available on:
  = @product.available_on
%p
  %b Discontinued on:
  = @product.discontinued_on
%p
  = image_tag @product.image_url(:medium) if @product.image_data?

= link_to 'Edit', edit_product_path(@product)
\|
= link_to 'Back', products_path
