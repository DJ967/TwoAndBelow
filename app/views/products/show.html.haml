%h1.center= @product.name
.grid
  .span-2
    = image_tag @product.image_url(:medium) if @product.image_data?
  .span-4
    .box
      .grid
        .span-3
          %p
            %b Description:
            = @product.description
          %p
            %b Price:
            = number_to_currency(@product.price)
          %p
            %b Quantity:
            = @product.quantity
        .span-3
          %p
            %b Category:
            = @product.category.name
          %p
            = currently_for_sale(@product.for_sale)
          %p
            %b Available from:
            %span.one-line-text #{@product.available_on} -
            %span.one-line-text= @product.discontinued_on


= link_to 'Edit', edit_product_path(@product)
\|
= link_to 'Back', products_path
